<?xml version='1.0' encoding='utf-8'?>
<metamodel xmlns="http://schema.real.com/schema/">
	<include>../commonXml/kernel_metamodel.xml</include>
	<include>../commonXml/classMetamodel.xml</include>
	<namespace>UML 2.0</namespace>
	<diagram name="Hascol Structure Diagram">
		<nonGraphicTypes>
			<enum name="Hascol Processes::Process Operation Kind">
				<value>in</value>
				<value>out</value>
			</enum>
		</nonGraphicTypes>
		<graphicTypes>
			<import name="Class Diagram::Relation" as="Hascol Processes::Functor Parameter Relation"/>
			<import name="Class Diagram::Aggregation" as="Hascol Processes::Used Process Relation"/>
			<import name="Class Diagram::Composition" as="Hascol Processes::Nested Process Relation"/>
			<import name="Class Diagram::Generalization" as="Hascol Processes::Generalization"/>
			<import name="Kernel Diagram::Comment" as="Hascol Processes::Comment"/>
			<import name="Kernel Diagram::Comment Link" as="Hascol Processes::Comment Link"/>
			<import name="Kernel Diagram::Kernel Diagram" as="Hascol Processes::Diagram"/>
			<node name="Hascol Processes::Process">
				<graphics>
					<picture sizex="150" sizey="210">
						<rectangle fill="#ffffff" stroke-style="solid" stroke="#000000" y1="0" x1="0" y2="210"
								   stroke-width="1" x2="150" fill-style="solid"/>
						<line fill="#000000" stroke-style="solid" stroke="#000000" y1="25a" x1="0" y2="25a"
							  stroke-width="1" x2="150" fill-style="solid"/>
						<line fill="#000000" stroke-style="solid" stroke="#000000" y1="100" x1="0" y2="100"
							  stroke-width="1" x2="150" fill-style="solid"/>
					</picture>
					<labels>
						<label x="0" y="0" textBinded="name"/>
					</labels>
					<ports>
						<linePort>
							<start startx="0" starty="0"/>
							<end endx="150" endy="0"/>
						</linePort>
						<linePort>
							<start startx="150" starty="0"/>
							<end endx="150" endy="210"/>
						</linePort>
						<linePort>
							<start startx="150" starty="210"/>
							<end endx="0" endy="210"/>
						</linePort>
						<linePort>
							<start startx="0" starty="210"/>
							<end endx="0" endy="0"/>
						</linePort>
					</ports>
				</graphics>
				<logic>
					<generalizations>
						<parent parentName="Kernel Diagram::Classifier"/>
					</generalizations>
					<properties>
						<property type="string" name="implementation"/>
					</properties>
				</logic>
			</node>
			<node name="Hascol Processes::Process Operation">
				<graphics>
					<picture sizex="100" sizey="20"/>
					<labels>
						<label x="0" y="0" textBinded="direction"/>
						<label x="20" y="0" textBinded="name"/>
					</labels>
				</graphics>
				<logic>
					<generalizations>
						<parent parentName="Kernel Diagram::Classifier"/>
					</generalizations>
					<properties>
						<!-- <property type="Hascol Processes::Process Operation Kind" name="direction"/> -->
						<property type="string" name="direction"/>
					</properties>
				</logic>
			</node>
			<node name="Hascol Processes::Resource">
				<graphics>
					<picture sizex="100" sizey="20"/>
					<labels>
						<label x="0" y="0" textBinded="name"/>
					</labels>
				</graphics>
				<logic>
					<generalizations>
						<parent parentName="Kernel Diagram::Classifier"/>
					</generalizations>
					<properties>
						<property type="string" name="type"/>
					</properties>
				</logic>
			</node>
			<node name="Hascol Processes::Functor">
				<graphics>
					<picture sizex="250" sizey="210">
						<rectangle x1="0" y1="50" y2="210" x2="150" />
						<line x1="0" y1="75" x2="150" y2="75" />
						<line x1="0" y1="140" x2="150" y2="140" />
						<rectangle x1="100" y1="0" y2="55" x2="250" stroke-style="dash" fill-style="solid" fill="#ffffff"/>
					</picture>
					<labels>
						<label x="0" y="50" textBinded="name"/>
					</labels>
					<ports>
						<linePort>
							<start startx="0" starty="50"/>
							<end endx="100" endy="50"/>
						</linePort>
						<linePort>
							<start startx="150" starty="55"/>
							<end endx="150" endy="210"/>
						</linePort>
						<linePort>
							<start startx="150" starty="210"/>
							<end endx="0" endy="210"/>
						</linePort>
						<linePort>
							<start startx="0" starty="210"/>
							<end endx="0" endy="50"/>
						</linePort>
					</ports>
				</graphics>
				<logic>
					<generalizations>
						<parent parentName="Hascol Processes::Process"/>
					</generalizations>
				</logic>
			</node>
			<node name="Hascol Processes::Functor Parameter">
				<graphics>
					<picture sizex="140" sizey="20"/>
					<labels>
						<label x="0" y="0" textBinded="name"/>
					</labels>
					<ports>
						<pointPort x="140" y="10"/>
					</ports>
				</graphics>
				<logic>
				</logic>
			</node>
			<edge name="Hascol Processes::Functor Binding">
				<graphics>
					<lineType type="dashLine"/>
				</graphics>
				<logic>
					<associations beginType="empty_arrow" endType="no_arrow">
						<association beginName="Hascol Processes::Functor"
							endName="Hascol Processes::Process"/>
					</associations>
					<generalizations>
						<parent parentName="Kernel Diagram::Kernel Relationship"/>
					</generalizations>
					<properties>
						<property type="string" name="parameter bindings" />
					</properties>
				</logic>
			</edge>
		</graphicTypes>
	</diagram>
	
	<diagram name="Hascol Port Mapping Diagram">
		<!-- За неимением диаграммы композитных структур - ад-хок реализация -->
		<graphicTypes>
			<import name="Class Diagram::Relation" as="Hascol Port Mappings::Port Mapping Relation"/>
			<import name="Hascol Processes::Functor Parameter" as="Hascol Port Mappings::Functor Parameter"/>
			<node name="Hascol Port Mappings::Process Instance"> <!-- Должно наследоваться от EncapsulatedClassifier и TypedElement -->
				<graphics>
					<picture sizex="200" sizey="100">
						<rectangle x1="20a" y1="0" x2="180" y2="100" />
					</picture>
					<labels>
						<label x="20" y="0" textBinded="name"/>
					</labels>
				</graphics>
				<logic>
				</logic>
			</node>
			<node name="Hascol Port Mappings::Functor Instance">
				<graphics>
					<picture sizex="250" sizey="130">
						<rectangle x1="20a" y1="30a" x2="180" y2="130" />
						<rectangle x1="150" y1="0a" x2="250" y2="35a" stroke-style="dash" fill-style="solid" fill="#ffffff"/>
					</picture>
					<labels>
						<label x="20" y="30" textBinded="name"/>
					</labels>
				</graphics>
				<logic>
					<generalizations>
						<parent parentName="Hascol Port Mappings::Process Instance"/>
					</generalizations>
				</logic>
			</node>
			<node name="Hascol Port Mappings::Port"> <!-- Это просто порт из композитных структур + атрибут direction -->
				<graphics>
					<picture sizex="100" sizey="10">
						<rectangle x1="0" y1="0" x2="10" y2="10" fill="#ffffff" fill-style="solid"/>
					</picture>
					<labels>
						<label x="10" y="-10" textBinded="direction"/>
						<label x="30" y="-10" textBinded="name"/>
					</labels>
					<ports>
						<linePort>
							<start startx="0" starty="0"/>
							<end endx="0" endy="10"/>
						</linePort>
						<linePort>
							<start startx="10" starty="0"/>
							<end endx="10" endy="10"/>
						</linePort>
						<linePort>
							<start startx="0" starty="0"/>
							<end endx="10" endy="0"/>
						</linePort>
						<linePort>
							<start startx="0" starty="10"/>
							<end endx="10" endy="10"/>
						</linePort>
					</ports>
				</graphics>
				<logic>
					<properties>
						<!-- <property type="Hascol Processes::Process Operation Kind" name="direction"/> -->
						<property type="string" name="direction"/>
					</properties>
				</logic>
			</node>
		</graphicTypes>
	</diagram>
</metamodel>
